<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_white"
    tools:context="net.shopnc.b2b2c.android.ui.trys.TryGoodReportDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#f7f7f7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/nc_icon_back" />

        <LinearLayout
            android:id="@+id/title_bar_search"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/nc_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/nc_icon_search" />

            <TextView
                android:id="@+id/etSearchText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/nc_text_dark"
                android:textColorHint="@color/nc_text_hint"
                android:textSize="@dimen/dp14" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgClassify"
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/nc_bg_dark" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvBuy"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="7dp"></android.support.v7.widget.RecyclerView>

    <View
        style="@style/NCLine"
        android:layout_above="@+id/tvBuy"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/tvMoreTry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tvBuy"
        android:background="@drawable/btn_cancle"
        android:text="更多试用"
        android:textColor="@color/nc_text"
        android:textSize="@dimen/dp10" />

    <TextView
        android:id="@+id/tvBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_sure"
        android:text="马上下单"
        android:textColor="@color/nc_red"
        android:textSize="@dimen/dp10" />


</RelativeLayout>
