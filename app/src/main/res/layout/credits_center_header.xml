<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/background" />

        <net.shopnc.b2b2c.android.custom.CircleImageView
            android:id="@+id/iv_header"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_circle_imageview_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/member_w"
            app:civ_border_color="@color/nc_white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tv_login_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_header"
            android:text="立即登录"
            android:textColor="@color/nc_white"
            android:textSize="@dimen/tv20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_header"
            >


        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/nc_white"
                android:textSize="@dimen/tv20sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="经验值：0"
                android:textColor="@color/nc_white"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="58dp"
            android:layout_toRightOf="@id/layout_name"
            android:background="@drawable/rect_button_level"
            android:padding="3dp"
            android:text="Lv.1"
            android:textColor="@color/nc_white"
            android:textSize="10sp" />


        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tv_level"
            android:src="@drawable/cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="礼品兑换记录>"
            android:textColor="@color/nc_black"
            android:textSize="14sp" />

    </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/nc_white">


        <LinearLayout
            android:id="@+id/layout_my_credits"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_my_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/nc_text_dark"
                android:gravity="center_horizontal"
                android:paddingTop="13dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的积分"
                android:textSize="8sp"
                android:textColor="@color/nc_text_dark"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"

                />




        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="39dp"
            android:background="@color/nc_border"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/layout_voucher"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_my_voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/nc_text_dark"
                android:gravity="center_horizontal"
                android:paddingTop="13dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="可用代金券"
                android:textSize="8sp"
                android:textColor="@color/nc_text_dark"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"

                />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="39dp"
            android:background="@color/nc_border"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/layout_red_packet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_my_redpacket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/nc_text_dark"
                android:gravity="center_horizontal"
                android:paddingTop="13dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="可用红包"
                android:textSize="8sp"
                android:textColor="@color/nc_text_dark"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"

                />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/nc_border"/>

</LinearLayout>