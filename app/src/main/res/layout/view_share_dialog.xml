<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nc_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="分享"
        android:textColor="@color/nc_text_dark"
        android:textSize="@dimen/dp14" />

    <LinearLayout
        android:id="@+id/llCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCopyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/aa9"
            android:gravity="center_horizontal"
            android:text="复制链接"
            android:textColor="@color/nc_text_dark" />

        <TextView
            android:id="@+id/tvZxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/aa9"
            android:gravity="center_horizontal"
            android:text="生成二维码"
            android:textColor="@color/nc_text_dark"
            android:visibility="gone" />

    </LinearLayout>

    <View
        style="@style/NCLine"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/a_x"
            android:gravity="center_horizontal"
            android:text="微信"
            android:textColor="@color/nc_text_dark" />

        <TextView
            android:id="@+id/tvWXCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/charge_red_vxcontent"
            android:gravity="center_horizontal"
            android:text="朋友圈"
            android:textColor="@color/nc_text_dark" />

        <TextView
            android:id="@+id/tvQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/a_t"
            android:gravity="center_horizontal"
            android:text="QQ"
            android:textColor="@color/nc_text_dark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvQQZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/a_u"
            android:gravity="center_horizontal"
            android:text="QQ Zone"
            android:textColor="@color/nc_text_dark" />

        <TextView
            android:id="@+id/tvWeibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/a_v"
            android:gravity="center_horizontal"
            android:text="新浪微博"
            android:textColor="@color/nc_text_dark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvCode"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/share_code2"
            android:gravity="center_horizontal"
            android:text="二维码"
            android:textColor="@color/nc_text_dark" />

    </LinearLayout>

    <View style="@style/NCLine" />

    <TextView
        android:id="@+id/btnCancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@color/nc_text_dark" />
</LinearLayout>