<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivGoodPic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="left"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/tvGoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/tvGoodPrice"
        android:layout_toRightOf="@+id/ivGoodPic"
        android:maxLines="2"
        android:paddingTop="6dp"
        android:text="天津市网城科技股份有限公司"
        android:textColor="@color/nc_text_dark"
        android:textSize="@dimen/dp14" />

    <TextView
        android:id="@+id/tvGoodsSPec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGoodName"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/tvGoodPrice"
        android:layout_toRightOf="@+id/ivGoodPic"
        android:maxLines="2"
        android:paddingBottom="4dp"
        android:text="guigeguige"
        android:textColor="@color/buystep_sku_text"
        android:textSize="@dimen/dp12" />

    <TextView
        android:id="@+id/tvPromotionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/ivGoodPic"
        android:background="@drawable/nc_btn_bg_on"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:text="定金预售"
        android:textColor="@color/nc_white"
        android:textSize="@dimen/dp10"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvGoodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:text="$ 0.00"
        android:textColor="@color/black"
        android:textSize="@dimen/dp14" />

    <TextView
        android:id="@+id/tvGoodsNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvGoodPrice"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:text="1"
        android:textColor="#959595"
        android:textSize="@dimen/dp14" />

    <LinearLayout
        android:id="@+id/llOrderRefund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/btnOrderMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_cancle"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:text="退款"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/dp10" />

        <TextView
            android:id="@+id/btnOrderGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_cancle"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:text="退货"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/dp10" />

        <TextView
            android:id="@+id/btnOrderComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_cancle"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:text="投诉"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/dp10" />

        <TextView
            android:id="@+id/tvOrderComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:text="投诉中"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/dp10" />

    </LinearLayout>


    <View
        style="@style/NCLine"
        android:layout_below="@+id/ivGoodPic"
        android:layout_marginTop="4dp"></View>

</RelativeLayout>