<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:layout_alignParentBottom="true"
              android:background="@drawable/nc_bg_border_top_and_bottom"
              android:orientation="horizontal">


    <TextView
        android:id="@+id/tvGoodsInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="已选取1/200个商品"
        android:textColor="@color/nc_text"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btnMyRepo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/promotion_green_lt"
        android:padding="10dip"
        android:text="我的选品库"
        android:textColor="@color/nc_white"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/promotion_green_dk"
        android:padding="10dip"
        android:text="加入选品库"
        android:textColor="@color/nc_white"
        android:textSize="14sp"/>

</LinearLayout>
