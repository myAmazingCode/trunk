<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/nc_bg"
    android:layout_height="match_parent">

    <include layout="@layout/app_common_header"></include>

    <TextView
        android:id="@+id/tv_keyong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/nc_text"
        android:text="可提现金额 ￥0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/nc_white"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            style="@style/NCFormText"
            android:text="申请金额："
            android:textColor="@color/nc_black"/>

        <EditText
            android:id="@+id/etjiner"
            style="@style/NCFormEditNoBorder"
            android:textColorHint="#bfbfbf"
            android:hint="请输入申请金额" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/nc_white"
        android:orientation="horizontal">

        <TextView
            style="@style/NCFormText"
            android:text="支付密码："
            android:textColor="@color/nc_black"/>

        <EditText
            android:id="@+id/etpass"
            style="@style/NCFormEditNoBorder"
            android:textColorHint="#bfbfbf"
            android:password="true"
            android:hint="请输入支付密码" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_box_applay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="申请提现"
        android:textColor="@color/nc_white"
        android:textSize="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corners_bg_applay"/>

</LinearLayout>