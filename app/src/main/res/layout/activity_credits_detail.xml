<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nc_white"
    tools:context="net.shopnc.b2b2c.android.ui.jifen.CreditsDetailActivity">

    <include layout="@layout/activity_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_detail_pict"
                android:layout_width="match_parent"
                android:layout_height="353dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="酸梅汤 山楂乌梅茶 原料浓缩 速溶茶饮料"
                android:textColor="@color/nc_black"
                android:textSize="@dimen/tv16sp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <TextView
                    android:id="@+id/tv_credits_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1600"
                    android:textSize="@dimen/tv20sp"
                    android:textColor="@color/app_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textSize="@dimen/tv10sp"
                    android:textColor="@color/app_red"
                    android:paddingLeft="2dp"
                    />
                <TextView
                    android:id="@+id/tv_left_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="剩余：666件"
                    android:textColor="@color/nc_black"
                    android:textSize="14sp"
                    android:gravity="right"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_guide_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="市场参考价 49.90元"
                android:textColor="@color/nc_text"
                android:textSize="@dimen/tv14sp"
                android:padding="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/nc_border"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/integral_provide"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="礼品描述"
                    android:textColor="@color/nc_black"
                    android:textSize="@dimen/tv16sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/nc_border"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="礼品编号"
                    android:textColor="@color/nc_text"
                    android:textSize="@dimen/tv16sp"

                    />
                <TextView
                    android:id="@+id/tv_goods_no"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="礼品描述"
                    android:textColor="@color/nc_text_dark"
                    android:textSize="@dimen/tv16sp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/nc_border"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="添加时间"
                    android:textColor="@color/nc_text"
                    android:textSize="@dimen/tv16sp"

                    />
                <TextView
                    android:id="@+id/tv_add_time"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="礼品描述"
                    android:textColor="@color/nc_text_dark"
                    android:textSize="@dimen/tv16sp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/nc_border"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="浏览人气"
                    android:textColor="@color/nc_text"
                    android:textSize="@dimen/tv16sp"

                    />
                <TextView
                    android:id="@+id/tv_browse_num"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="礼品描述"
                    android:textColor="@color/nc_text_dark"
                    android:textSize="@dimen/tv16sp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/nc_border"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/integral_record"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="兑换记录"
                    android:textColor="@color/nc_black"
                    android:textSize="@dimen/tv16sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/nc_border"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_record_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/tv_exchange_cart"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/cart_b"
            android:background="@color/nc_bg"
            android:text="兑换车"
            android:textColor="@color/nc_black"
            android:textSize="@dimen/tv14sp"
            android:gravity="center"
            android:paddingTop="4dp"
            />

        <Button
            android:id="@+id/btn_exchange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_red"
            android:textColor="@color/nc_white"
            android:text="我要兑换"
            android:textSize="@dimen/tv18sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
