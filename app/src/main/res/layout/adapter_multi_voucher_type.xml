<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nc_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:id="@+id/tv_describe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台自营"
            android:textColor="@color/nc_black"
            android:textSize="@dimen/tv14sp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="食品/保健"
            android:textSize="@dimen/tv12sp"
            android:textColor="@color/nc_black"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" 
        android:background="@color/nc_border"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/iv_pict"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/test"
            />

        <TextView
            android:id="@+id/tv_voucher_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥50"
            android:textColor="@color/app_red"
            android:textSize="@dimen/tv18sp"
            android:layout_toRightOf="@id/iv_pict"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            />

        <TextView
            android:id="@+id/tv_voucher_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物满100.00元可用"
            android:textColor="@color/app_red"
            android:textSize="@dimen/tv12sp"
            android:layout_toRightOf="@id/iv_pict"
            android:layout_below="@id/tv_voucher_goods_name"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            />

        <TextView
            android:id="@+id/tv_voucher_limit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期至2018-12-28"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv12sp"
            android:layout_toRightOf="@id/iv_pict"
            android:layout_below="@id/tv_voucher_temp"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            />

        <TextView
            android:id="@+id/tv_voucher_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需50积分"
            android:textColor="@color/app_red"
            android:textSize="@dimen/tv14sp"
            android:layout_toRightOf="@id/iv_pict"
            android:layout_below="@id/tv_voucher_limit_time"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            />

        <TextView
            android:id="@+id/tv_exchange_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2人已兑换"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv12sp"
            android:layout_toRightOf="@id/iv_pict"
            android:layout_below="@id/tv_voucher_price"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            />

        <Button
            android:id="@+id/btn_exchange_now"
            android:layout_width="54dp"
            android:layout_height="23dp"
            android:background="@drawable/duihuan"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/nc_border"/>
</LinearLayout>