<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    
    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/nc_white">

        <ImageView
            android:id="@+id/iv_pict"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/test"
            />

        <TextView
            android:id="@+id/tv_voucher_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酸梅汤 山楂乌梅茶 原料浓缩 速溶茶饮料"
            android:textColor="@color/nc_black"
            android:textSize="@dimen/tv12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/iv_pict"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            />

        <TextView
            android:id="@+id/tv_voucher_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money_rmb"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv12sp"
            android:layout_toRightOf="@id/iv_pict"
            android:layout_below="@id/tv_voucher_goods_name"
            android:paddingLeft="20dp"
            android:paddingTop="18dp"
            />


        <TextView
            android:id="@+id/tv_voucher_origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16.00"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv18sp"
            android:layout_toRightOf="@id/tv_voucher_temp"
            android:layout_below="@id/tv_voucher_goods_name"
            android:paddingTop="13dp"
            />
        <TextView
            android:id="@+id/tv_voucher_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需6000积分"
            android:textColor="@color/app_red"
            android:textSize="@dimen/tv12sp"
            android:layout_toRightOf="@id/iv_pict"
            android:layout_below="@id/tv_voucher_temp"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            />


        <TextView
            android:id="@+id/tv_require_level"
            android:layout_width="33dp"
            android:layout_height="23dp"
            android:text="Lv.1"
            android:textColor="@color/nc_white"
            android:textSize="@dimen/tv14sp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/rect_button_level"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/nc_border"/>
</LinearLayout>