<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageGoodsPic"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:paddingRight="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textGoodsName"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:lines="2"
                    android:layout_marginTop="0dp"
                    android:text=""
                    android:textColor="@color/nc_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textGoodsState"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="待发货"
                    android:textColor="@color/nc_red"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textGoodsJingle"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:text=""
                android:textColor="@color/nc_fg"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textGoodsPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="￥ 0.00"
                    android:textColor="@color/nc_red"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textGoodsyong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:singleLine="true"
                    android:text="佣金￥0.00"
                    android:textColor="@color/nc_red"
                    android:textSize="16dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/textGoodsNUM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="x8"
                android:layout_marginBottom="5dp"
                android:textColor="@color/nc_text"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>