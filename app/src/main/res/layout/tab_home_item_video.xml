<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_fenxiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="@dimen/dimen_1"
    android:background="@color/nc_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="5dp"
        android:background="@color/nc_white"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/fenxiao_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/mian_logo"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/fenxiao_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="直播"
                android:textColor="#FF258F"
                android:textSize="14dp" />

        </LinearLayout>

        <Button
            android:id="@+id/fenxiao_more"
            style="@style/NCTextButtonSmall"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:drawableRight="@drawable/main_right"
            android:text="更多"
            android:textColor="#676767"
            android:textSize="12dp"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5" />

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="@color/nc_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llShipin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_zhibao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fengxiao_r_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:lines="1"
                    android:text="热门"
                    android:textColor="#0B0B0B"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shipin" />

            </LinearLayout>

            <TextView
                android:id="@+id/fengxiao_r_brief_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="3dp"
                android:text="护肤彩妆技能UP"
                android:textColor="#989898"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/fengxiao_r_img_1"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llShipin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_zhibao2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fengxiao_r_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:lines="1"
                    android:text="热门"
                    android:textColor="#0B0B0B"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shipin" />

            </LinearLayout>

            <TextView
                android:id="@+id/fengxiao_r_brief_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="3dp"
                android:text="护肤彩妆技能UP"
                android:textColor="#989898"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/fengxiao_r_img_2"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llShipin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_zhibao3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fengxiao_r_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:lines="1"
                    android:text="热门"
                    android:textColor="#0B0B0B"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shipin" />

            </LinearLayout>

            <TextView
                android:id="@+id/fengxiao_r_brief_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="3dp"
                android:text="护肤彩妆技能UP"
                android:textColor="#989898"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/fengxiao_r_img_3"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>