<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <!-- 首页TOP -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/nc_title_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/nc_icon_back"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dip"
            android:singleLine="true"
            android:text="专题页面"
            android:textColor="@color/nc_black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/computerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/computer"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iphoneID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/iphone"
            android:gravity="center_vertical"
            android:padding="5dip"
            android:visibility="gone" />
    </RelativeLayout>

    <View style="@style/NCLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webviewID"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <net.shopnc.b2b2c.android.custom.RoundProgressBar
            android:id="@+id/roundProgressBarID"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android_custom:roundColor="#D1D1D1"
            android_custom:roundProgressColor="@color/black"
            android_custom:roundWidth="10dip"
            android_custom:textColor="#9A32CD"
            android_custom:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>