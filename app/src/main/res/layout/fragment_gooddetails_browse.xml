<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:orientation="horizontal"
        android:padding="@dimen/dp8">

        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品介绍"
            android:textColor="@drawable/goodsdetail_tab_text_selector"/>

        <View
            android:id="@+id/dividerSpec"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/nc_text"/>

        <TextView
            android:id="@+id/tvSpec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="规格参数"
            android:textColor="@drawable/goodsdetail_tab_text_selector"/>

        <View
            android:id="@+id/dividerProtection"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/nc_text"/>

        <TextView
            android:id="@+id/tvProtection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="售后保障"
            android:textColor="@drawable/goodsdetail_tab_text_selector"/>

        <View
            android:id="@+id/dividerCommitment"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/nc_text"/>

        <TextView
            android:id="@+id/tvCommitment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商家承诺"
            android:textColor="@drawable/goodsdetail_tab_text_selector"/>


    </LinearLayout>

    <WebView
        android:id="@+id/webDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>