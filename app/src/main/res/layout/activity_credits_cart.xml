<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.shopnc.b2b2c.android.ui.jifen.CreditsCartActivity">

    <include layout="@layout/activity_base"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cart_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/nc_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="所需总积分："
            android:textColor="@color/nc_black"
            android:textSize="@dimen/tv16sp"
            android:gravity="center_vertical|right"
            />
        <TextView
            android:id="@+id/tv_all_points"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="@color/app_red"
            android:textSize="@dimen/tv18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:paddingRight="20dp"
            android:textColor="@color/app_red"
            android:textSize="@dimen/tv14sp"

            />

        <Button
            android:id="@+id/btn_exchange"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/app_red"
            android:text="确认兑换"
            android:textColor="@color/nc_white"
            android:textSize="@dimen/tv18sp"
            />

    </LinearLayout>
</LinearLayout>
